{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "resolveJsonModule": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2019", "ES2020.Promise"]
  },
  "include": ["./*.js", "./*.ts", "./src/**/*", "./src/**/*.json"]
}
